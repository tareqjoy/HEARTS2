<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="@dimen/table_width"
        android:layout_height="@dimen/table_width"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/rondtabletopview" />


    <LinearLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="@dimen/card_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/onTableCard2"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:minWidth="@dimen/table_cards_min_width"
            android:minHeight="@dimen/card_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/onTableCard1"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height" />

            <ImageView
                android:id="@+id/onTableCard3"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="@dimen/card_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/onTableCard4"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/users_turn_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table"
        android:layout_centerHorizontal="true"
        android:text="YOUR TURN!"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/leftPlayerCard"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/pass_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/downPlayerCard"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlackTransparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noPassingMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Passing Round!"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pass_first"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:layout_marginRight="4dp"
                android:background="@color/colorWhiteTransparent" />

            <ImageView
                android:id="@+id/pass_second"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:layout_marginRight="4dp"
                android:background="@color/colorWhiteTransparent" />

            <ImageView
                android:id="@+id/pass_third"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:background="@color/colorWhiteTransparent" />
        </LinearLayout>

        <Button
            android:id="@+id/pass_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pass left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/player1image"
            android:layout_width="@dimen/player_image_width"
            android:layout_height="@dimen/player_image_height"
            android:src="@drawable/player1normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player1name"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/player1score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/rightPlayerCard"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/player3image"
            android:layout_width="@dimen/player_image_width"
            android:layout_height="@dimen/player_image_height"
            android:src="@drawable/player3normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player3name"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/player3score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/topPlayerCard"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player2image"
            android:layout_width="@dimen/player_image_width"
            android:layout_height="@dimen/player_image_height"
            android:src="@drawable/player2normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player2name"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Â·"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/player2score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/downPlayerCard"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="invisible"></ImageView>

    <com.example.hearts.CardDeck
        android:id="@+id/playerCrads"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></com.example.hearts.CardDeck>

    <TextView
        android:id="@+id/warning_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorBlackTransparent"
        android:padding="6dp"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="Wrong Move"
        android:textAllCaps="true"
        android:textColor="@color/colorYellow"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Point"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/player4score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hearts_broken_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorBlackTransparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="7dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:src="@drawable/hearts_broken" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hearts Broken!"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorBlackTransparent"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scoreShowImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="3dp"
            android:src="@drawable/trophy" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:padding="3dp"
            android:src="@drawable/menuicon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/gameOverMsg"
        android:gravity="center"
        android:background="@color/colorBlackTransparent"
        android:padding="18dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Game Over"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restartBtn"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorBlackTransparent"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:elevation="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBlueGray"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="400dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Score"

                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/closeImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:src="@drawable/cross" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGray">

                    <TableRow>

                        <TextView
                            android:id="@+id/defaultTextViewScoreLayout"

                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="Players"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="Total Score"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="@string/player1name"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:id="@+id/player1TotalScore"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="@string/player2name"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:id="@+id/player2TotalScore"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="@string/player3name"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:id="@+id/player3TotalScore"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="You"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>

                        <TextView
                            android:id="@+id/player4TotalScore"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp">

                        </TextView>
                    </TableRow>
                </TableLayout>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/historyTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow android:id="@+id/roundNo">

                        </TableRow>

                        <TableRow android:id="@+id/player1History">

                        </TableRow>

                        <TableRow android:id="@+id/player2History">

                        </TableRow>

                        <TableRow android:id="@+id/player3History">

                        </TableRow>

                        <TableRow android:id="@+id/player4History">

                        </TableRow>
                    </TableLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>